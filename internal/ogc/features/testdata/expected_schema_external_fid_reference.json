    "type": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "datum_strt": {
      "type": "string"
    },
    "datum_eind": {
      "type": "string"
    },
    "document": {
      "type": "string"
    },
    "datum_doc": {
      "type": "string"
    },
    "rdf_seealso": {
      "type": "string"
