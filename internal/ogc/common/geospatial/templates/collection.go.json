{{- /*gotype: github.com/PDOK/gokoala/internal/engine.TemplateData*/ -}}
{
  "id" : "{{ .Params.Collection.ID }}",
  {{ if and .Params.Collection.Metadata .Params.Collection.Metadata.Title }}
  "title" : "{{ .Params.Collection.Metadata.Title }}",
  {{ else }}
  "title" : "{{ .Params.Collection.ID }}",
  {{ end }}
  {{ if and .Params.Collection.Metadata .Params.Collection.Metadata.Description }}
  "description" : "{{ unmarkdown .Params.Collection.Metadata.Description }}",
  {{ end }}
  {{- if and .Params.Collection.Metadata .Params.Collection.Metadata.Keywords }}
  "keywords": [
  {{- range $k, $keyword := .Params.Collection.Metadata.Keywords -}}
    {{ if $k }},{{ end }}
    {"keyword": {{ mustToRawJson $keyword }} }
    {{- end -}}
  ],
  {{- end }}
  {{ if and .Config.OgcAPI.GeoVolumes .Config.OgcAPI.GeoVolumes.Collections }}
  "collectionType" : "3d-container",
  {{ end }}
  {{ if and .Params.Collection.Metadata .Params.Collection.Metadata.Extent }}
  "extent" : {
    "spatial": {
      "bbox": [ [ {{ .Params.Collection.Metadata.Extent.Bbox | join "," }} ] ],
      {{- if .Params.Collection.Metadata.Extent.Srs -}}
      "crs" : "http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" .Params.Collection.Metadata.Extent.Srs }}"
      {{- else -}}
      "crs" : "http://www.opengis.net/def/crs/OGC/1.3/CRS84"
      {{- end -}}
    }
    {{- if and .Params.Collection.Metadata .Params.Collection.Metadata.Extent.Interval -}}
    ,"temporal": {
      "interval": [ [ {{ .Params.Collection.Metadata.Extent.Interval | join ", " }} ] ],
      "trs" : "http://www.opengis.net/def/uom/ISO-8601/0/Gregorian"
    }
    {{- end -}}
  },
  {{ end }}
  {{ if and .Config.OgcAPI.Features .Config.OgcAPI.Features.Collections }}
  "crs" : [
    "http://www.opengis.net/def/crs/OGC/1.3/CRS84"
    {{ range $index, $srs := .Config.OgcAPI.Features.CollectionSRS .Params.Collection.ID }}
    ,"http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" $srs }}"
    {{ end }}
  ],
  {{ if and .Params.Collection.Metadata .Params.Collection.Metadata.StorageCrs }}
  "storageCrs" : "{{ .Params.Collection.Metadata.StorageCrs }}",
  {{ else }}
  "storageCrs" : "http://www.opengis.net/def/crs/OGC/1.3/CRS84",
  {{ end }}
  {{ end }}
  "links" : [
    {
      "rel" : "self",
      "type" : "application/json",
      "title" : "This document as JSON",
      {{- if and .Params.Collection.Metadata .Params.Collection.Metadata.LastUpdated }}
      "updated" : "{{ dateInZone "2006-01-02T15:04:05Z07:00" (toDate "2006-01-02T15:04:05Z07:00" .Params.Collection.Metadata.LastUpdated) "UTC" }}",
      {{- end }}
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}?f=json"
    },
    {
      "rel" : "alternate",
      "type" : "text/html",
      "title" : "This document as HTML",
      {{- if and .Params.Collection.Metadata .Params.Collection.Metadata.LastUpdated }}
      "updated" : "{{ dateInZone "2006-01-02T15:04:05Z07:00" (toDate "2006-01-02T15:04:05Z07:00" .Params.Collection.Metadata.LastUpdated) "UTC" }}",
      {{- end }}
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}?f=html"
    }
    {{ if and .Params.Collection.Metadata .Params.Collection.Metadata.Thumbnail }}
    ,{
      {{ $imageType := .Params.Collection.Metadata.Thumbnail | ext | trimPrefix "." }}
      "rel": "preview",
      "type": "image/{{ if eq $imageType "jpg" }}jpeg{{ else }}{{ $imageType }}{{ end }}",
      "title": "Thumbnail for {{ .Params.Collection.ID }}",
      "href": "{{ .Config.BaseURL }}/resources/{{ .Params.Collection.Metadata.Thumbnail }}"
    }
    {{ end }}
    {{ if and .Config.OgcAPI.GeoVolumes .Config.OgcAPI.GeoVolumes.Collections }}
      {{ if and .Params.Collection.GeoVolumes .Params.Collection.GeoVolumes.Has3DTiles }}
      ,
      {
        "rel" : "items",
        "type" : "application/json+3dtiles",
        "title" : "Tileset definition of collection {{ .Params.Collection.ID }} according to the OGC 3D Tiles specification",
        "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/3dtiles?f=json"
      }
      {{ end }}
      {{ if and .Params.Collection.GeoVolumes .Params.Collection.GeoVolumes.HasDTM }}
      ,
      {
        "rel" : "items",
        "type" : "application/json",
        "title" : "Digital Terrain Model '{{ .Params.Collection.ID }}' in Quantized Mesh format",
        "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/quantized-mesh?f=json"
      }
      {{ end }}
    {{ end }}
    {{ if and .Config.OgcAPI.Tiles .Config.OgcAPI.Tiles.Collections }}
    ,
    {
      "rel" : "http://www.opengis.net/def/rel/ogc/1.0/tilesets-vector",
      "type" : "application/json",
      "title" : "The JSON representation of the {{ .Params.Collection.ID }} tiles served from this endpoint",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/tiles?f=json"
    },
    {
      "rel" : "http://www.opengis.net/def/rel/ogc/1.0/tilesets-vector",
      "type" : "text/html",
      "title" : "The HTML representation of the {{ .Params.Collection.ID }} tiles served from this endpoint",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/tiles?f=html"
    }
    {{ end }}
    {{ if and .Config.OgcAPI.Features .Config.OgcAPI.Features.Collections }}
    ,
    {
      "rel" : "items",
      "type" : "application/geo+json",
      "title" : "The JSON representation of the {{ .Params.Collection.ID }} features served from this endpoint",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/items?f=json"
    },
    {
      "rel" : "items",
      "type" : "application/vnd.ogc.fg+json",
      "title" : "The JSON-FG representation of the {{ .Params.Collection.ID }} features served from this endpoint",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/items?f=jsonfg"
    },
    {
      "rel" : "items",
      "type" : "text/html",
      "title" : "The HTML representation of the {{ .Params.Collection.ID }} features served from this endpoint",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/items?f=html"
    },
    {
      "rel" : "http://www.opengis.net/def/rel/ogc/1.0/schema",
      "type" : "application/schema+json",
      "title" : "The JSON representation of the {{ .Params.Collection.ID }} schema",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/schema?f=json"
    },
    {
      "rel" : "http://www.opengis.net/def/rel/ogc/1.0/schema",
      "type" : "text/html",
      "title" : "The HTML representation of the {{ .Params.Collection.ID }} schema",
      "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/schema?f=html"
    }
    {{ if and .Params.Collection.Links .Params.Collection.Links.Downloads }}
    {{ range $link := .Params.Collection.Links.Downloads }}
    ,
    {
      "rel" : "enclosure",
      "type" : "{{ $link.MediaType }}",
      "title" : "{{ $link.Name }}",
      "href" : "{{ $link.AssetURL }}"{{ if $link.Size }},
      "length" : {{ bytessize $link.Size }}
      {{ end }}
    }
    {{ end }}
    {{ end }}
    {{ end }}
  ]
  {{ if and .Config.OgcAPI.GeoVolumes .Config.OgcAPI.GeoVolumes.Collections }}
  ,
  "content" : [
      {{ if and .Params.Collection.GeoVolumes .Params.Collection.GeoVolumes.Has3DTiles }}
      {
        "rel" : "original",
        "type" : "application/json+3dtiles",
        "title" : "Tileset definition of collection {{ .Params.Collection.ID }} according to the OGC 3D Tiles specification",
        "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/3dtiles?f=json",
        "collectionType": "3d-container"
      }
      {{ else if and .Params.Collection.GeoVolumes .Params.Collection.GeoVolumes.HasDTM }}
      {
        "rel" : "original",
        "type" : "application/json",
        "title" : "Digital Terrain Model '{{ .Params.Collection.ID }}' in Quantized Mesh format",
        "href" : "{{ .Config.BaseURL }}/collections/{{ .Params.Collection.ID }}/quantized-mesh?f=json",
        "collectionType": "3d-container"
      }
      {{ end }}
  ]
  {{ end }}
}
